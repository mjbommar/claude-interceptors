#!/bin/bash
# Claude Interceptor for 'isort' command

# Check for bypass flags
if [[ "$CLAUDE_INTERCEPTOR_BYPASS" == "1" ]] || [[ "$*" == *"--force"* ]]; then
    if command -v isort >/dev/null 2>&1; then
        REAL_ISORT=$(which isort)
        exec "$REAL_ISORT" "$@"
    else
        echo "❌ isort not found in system PATH" >&2
        exit 127
    fi
    exit $?
fi

echo "❌ isort usage detected!"
echo ""
echo "🤖 AI Agent Instructions:"
echo "  For much faster import sorting:"
echo "  ⚡ ruff check --select I --fix $*"
echo "  📦 uv tool run ruff check --select I --fix $*  # If ruff not installed"
echo ""
echo "💡 Alternative - format and sort in one command:"
echo "  📋 ruff format $* && ruff check --select I --fix $*"
echo ""
echo "💡 Why ruff is better:"
echo "  • 10-100x faster than isort"
echo "  • Built in Rust for speed"
echo "  • Unified with linting and formatting"
echo "  • Better conflict resolution"
echo "  • Single tool for all code quality"
echo ""
echo "🔧 To proceed with isort anyway:"
echo "  isort --force $*"
echo "  CLAUDE_INTERCEPTOR_BYPASS=1 isort $*"
echo ""
echo "💡 Learn more: https://docs.astral.sh/ruff/rules/#isort-i"
echo "🔧 Disable globally: claude-interceptor disable"

exit 1